<%- include("../partials/header") %>


    <header class="jumbotron">
        <div class="container">
            <h1> Welcome to Yelp Camp!!!</h1>
            <p>View our campground from all over the world</p>
            <p><a class= "btn btn-primary btn-lg" href="/campgrounds/new">Add New Campgrounds</a></p>
            <p>
                <form class="form-inline" action="/campgrounds" method="GET">
                    <div class ="form-group">
                        <input class= "form-control" type="text" name = "search" placeholder="Campground search...." required>
                        <input class= "btn btn-default" type="submit" value = "search">
                    </div>
                </form>
            </p>
        </div>  
    </header>


<div class="row">

    
        <% campgrounds.forEach(function(camp) { %>
            <div class="col-lg-3 col-md-4">
                <div class="thumbnail">
                    <img class="img-fluid" src="<%= camp.image %>">   
                    <div class="caption">
                        <h4><%=camp.name%></h4>
                    </div>
                    <p><a href="/campgrounds/<%= camp._id%>" class="btn btn-primary">More Info</a></p>
                </div>

            </div>
            
        <% }) %>
    
</div>

<%- include("../partials/footer") %>
