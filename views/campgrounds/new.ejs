<%- include("../partials/header") %>

    <div class="row">
    
        <h1 style="text-align: center;">Create a New Campground</h1>
        <div style="width: 30%; margin:25px auto;">
            <form action="/campgrounds" method="POST" enctype="multipart/form-data"> <!--allows to have file upload feature-->
                
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="name" name = "campground[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="price" name = "campground[price]" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="image"></label>
                    <input class="form-control" id= "image" type="file" name="image" accept="image/*" required> <!--only image file accepted-->
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="description" name="campground[description]">
                </div>
                <div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">GO BACK</a>
            
        </div>

    </div>

<%- include("../partials/footer") %>
