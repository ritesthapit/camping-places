<%- include("../partials/header") %>

    <div class="row">
    
        <h1 style="text-align: center;">Edit <%=campground.name%></h1>
        <div style="width: 40%; margin:25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" value= "<%=campground.name%>" name = "campground[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%=campground.price%>" name = "campground[price]" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <label for="image"></label>
                    <input class="form-control" id= "image" type="file" name="image" accept="image/*"> <!--only image file accepted-->
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value= "<%=campground.description%>" name="campground[description]">
                </div>
                <div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">GO BACK</a>
            
        </div>

    </div>

<%- include("../partials/footer") %>
